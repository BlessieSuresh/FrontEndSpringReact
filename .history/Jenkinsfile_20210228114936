#!/usr/bin/env groovy

node {
    
    stage('checkout') {
        checkout scm
    }

    stage('install tools') {
        if (isUnix()) {
            sh "npm install"
        } else {
            bat(/"C:\Program Files\nodejs\npm.cmd" install/)
        }
    }

    stage('build') {
        if (isUnix()) {
            sh "npm run build"
        } else {
            bat(/"C:\Program Files\nodejs\npm.cmd" run build/)
        }
    }


}
